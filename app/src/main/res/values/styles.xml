<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
      <!--  <item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceHeadline3">@style/textAppearanceHeadline3</item>
        <item name="textAppearanceHeadline4">@style/textAppearanceHeadline4</item>
        <item name="materialButtonStyle">@style/Button</item>
        <item name="editTextStyle">@style/EditTextTheme</item>

    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_4sdp</item>
        <item name="android:height">@dimen/_30sdp</item>
        <item name="android:width">@dimen/_120sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/medium</item>
        <item name="editTextColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="BaseText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseHeader" parent="BaseText" />

    <style name="textAppearanceHeadline3" parent="BaseHeader">
        <item name="android:fontFamily">@font/extra_bold_italic</item>
    </style>

    <style name="selectedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>


    <style name="textAppearanceHeadline4" parent="BaseHeader">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="semiBold" parent="BaseHeader">
        <item name="android:fontFamily">@font/semi_bold</item>

    </style>

    <style name="regular" parent="BaseHeader">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="bold" parent="BaseHeader">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="medium" parent="BaseHeader">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="BottomNavigationTheme" parent="AppTheme">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

   <!-- <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>-->

</resources>
