<?xml version="1.0" encoding="utf-8"?>
  <layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.android.vadify.ui.Home" />

        <variable
            name="vm1"
            type="com.android.vadify.ui.dashboard.viewmodel.SettingFragmentViewModel" />

    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:fillViewport="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
android:id="@+id/lnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@mipmap/top_icon" />

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:layout_weight=".3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    >

                    <RelativeLayout

                        android:id="@+id/chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/ic__one">


                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_chat_" />


                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:text="Chat"
                            android:textColor="#000"
                            android:textSize="@dimen/_15ssp" />


                    </RelativeLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:visibility="gone"
                        android:id="@+id/chatBadge"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/dark_blue_circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_9ssp"

                        />
                </FrameLayout>

                <FrameLayout
                    android:layout_weight=".3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    >
                <RelativeLayout
                    android:id="@+id/audioCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"

                    android:background="@drawable/ic__two">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:src="@mipmap/audio_call" />


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Audio Call"
                        android:textColor="#000"
                        android:textSize="@dimen/_14ssp" />


                </RelativeLayout>
                    <com.google.android.material.textview.MaterialTextView
                       android:visibility="gone"
                        android:id="@+id/audioCallBadge"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/dark_blue_circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_9ssp"

                        />

                </FrameLayout>
                <FrameLayout
                    android:layout_weight=".3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    >

                <RelativeLayout

                    android:id="@+id/videoCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/ic__three">

                    <ImageView

                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:src="@mipmap/video_call" />


                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Video Call"
                        android:textColor="#000"
                        android:textSize="@dimen/_14ssp" />


                </RelativeLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:visibility="gone"
                        android:id="@+id/videoCallBadge"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top|right"
                        android:background="@drawable/dark_blue_circle"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_9ssp"

                        />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/btnProfilePic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/ic__fo">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        >

                        <de.hdodenhof.circleimageview.CircleImageView


                            android:id="@+id/profilePic"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_75sdp"


                            />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_camera"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|right"
                            android:src="@drawable/ic_profile_cam"

                            />
                    </FrameLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/translation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/ic__five">

                    <ImageView

                        android:id="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_translation" />


                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image5"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Translate Now"
                        android:textColor="#000"
                        android:textSize="@dimen/_12ssp" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout

                    android:id="@+id/inviteFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:background="@drawable/ic__six">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_invite_frnds" />


                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image6"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="Invite Friends"
                        android:textColor="#000"
                        android:textSize="@dimen/_12ssp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight=".3"
                    android:background="@drawable/ic__sev">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:src="@mipmap/camera_home" />


                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image7"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Camera"
                        android:textColor="#000"
                        android:textSize="@dimen/_14ssp" />


                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:background="@drawable/ic__">

                    <ImageView

                        android:id="@+id/image8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:src="@mipmap/help_home" />


                    <TextView
                        android:id="@+id/text8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image8"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Help"
                        android:textColor="#000"
                        android:textSize="@dimen/_14ssp" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_below="@+id/lnOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_35sdp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignTop="@+id/texta"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@color/blue" />

        <TextView
            android:id="@+id/texta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:text="Chat to anyone in the world in your language"
            android:textStyle="bold|italic" />

    </RelativeLayout>
</RelativeLayout>
</ScrollView>
  </layout>